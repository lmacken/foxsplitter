<?xml version="1.0"?>

<!DOCTYPE overlay [
<!ENTITY % mainDTD SYSTEM "chrome://splitbrowser/locale/splitbrowser.dtd">
%mainDTD;
]>

<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<preferences id="prefpane-selection-menu-preferences">
	<preference id="extensions.multipletab.show.multipletab-selection-splitbrowser-align-horizontal"
		name="extensions.multipletab.show.multipletab-selection-splitbrowser-align-horizontal"
		type="bool"/>
	<preference id="extensions.multipletab.show.multipletab-selection-splitbrowser-align-vertical"
		name="extensions.multipletab.show.multipletab-selection-splitbrowser-align-vertical"
		type="bool"/>
</preferences>
<vbox id="prefpane-selection-menu-items">
	<checkbox id="extensions.multipletab.show.multipletab-selection-splitbrowser-align-horizontal-check"
		preference="extensions.multipletab.show.multipletab-selection-splitbrowser-align-horizontal"
		label="&multipletab.align.horizontal.label;"/>
	<checkbox id="extensions.multipletab.show.multipletab-selection-splitbrowser-align-vertical-check"
		preference="extensions.multipletab.show.multipletab-selection-splitbrowser-align-vertical"
		label="&multipletab.align.vertical.label;"/>
</vbox>

</overlay>
